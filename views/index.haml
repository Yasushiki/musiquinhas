#divIframe.center
  %iframe{:width => "560", :height => "315", :src => "//www.youtube.com/embed/#{@url}"}

#divBotoes.center
  %form{:action => "/"}
    %button#novaMusica{:type => "submit"}= "Nova música"
  %form{:action => "/resetar"}
    %button#resetar{:type => "submit"}= "Resetar ranking"
  %form{:action => "/instrucoes"}
    %button#instrucoes{:type => "submit"}= "Instruções"


:javascript
  let a = document.querySelectorAll("a");
  let btn = document.querySelectorAll('input[name="id"]');
  for(let i=0; i<5; i++) {
    if(a[i].innerText != '') {
      btn[i].disabled = true;
    }
  }
  
  let img = document.querySelectorAll('img');
  for(let i=0; i<5; i++) {
    if(img[i].src == "https://img.youtube.com/vi//mqdefault.jpg") {
      img[i].style.display = "none";
    }
  }

