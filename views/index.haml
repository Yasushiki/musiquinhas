%html
  %head
    %title Julgando você
    %link(rel="stylesheet" href="styles/style.css?v=60")

  %body
    %form{:method => "post", :action => "/a"}
      %input{:type => "hidden", :name => "url", :value => @url}
      %input{:type => "hidden", :name => "titulo", :value => @titulo}
      %table.center#top
        %tr.center
          %th='Classificação'
          %th='Música'
          %th='Miniatura'
        %tr.center
          %td
            %input{:type => "submit", :name => "id", :value => "1"}
          %td
            %a{:href => @nomes[0]["url"]}= @nomes[0]["titulo"]
          %td
            %img{:src => "https://img.youtube.com/vi/#{@nomes[0]['token']}/mqdefault.jpg"}
        %tr.center
          %td
            %input{:type => "submit", :name => "id", :value => "2"}
          %td
